<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#64bfff"
    tools:context=".MainActivity" >

	<ImageView
	    android:id="@+id/banner"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:background="@drawable/background">

	</ImageView>

    <TextView
        android:id="@+id/Titol"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/gelatsnostres"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <GridView
        android:id="@+id/gridView1"
        android:listSelector="#00000000"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:columnWidth="50dp"
        android:gravity="center"
        android:numColumns="5">
    </GridView>

    <TextSwitcher
        android:id="@+id/nomGelat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Titol"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"        
        android:textAppearance="?android:attr/textAppearanceMedium" />

    
    
    <TextSwitcher android:id="@+id/switcher"
        android:layout_below="@+id/nomGelat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Titol"
        android:layout_alignRight="@+id/Titol"
        
         />
    

</RelativeLayout>